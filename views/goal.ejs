<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="css/todolist.css">
<link rel="stylesheet" href="css/goal.css">
<script type="module" defer src="js/goalsUse.js"></script>
</head>
<body>
    <%- include('includes/body.ejs') %>
    <section class="todo--Content">

    <form action="/admin/newGoal" method="POST">
      <article class="input--content">
          
          <button type="submit" class="input--button">➕</button>
        <input type="text" name="goal" placeholder="Wpisz zadanie" class="input" required>
        <input type="date" name="goalDate" class="input--date" required>
            </form>
          </article>
        <article class="item--box">
          <article class="header--item--box">
            <p class="task--template">Zadanie</p> <p class="date--template">Termin</p> <p class="priority--template">Postęp w %</p>
        </article>
        <% if(goalsList.length > 0) { %>
          <% for(let el of goalsList){  %>
            <form action="/admin/editGoal" method="post">
          <article class="item">
            <input name="taskElement" class="task" value="<%= el.goal %>"  readonly></input>
          <input name="date--element"  value="<%= el.goalDate %>" readonly class="date"></input>
          <select class="priority" name="progress" id="" >
            <option value="<%= el.progress %>"><%= el.progress %>%</option>
            <option class="option--element" value="0">0%</option>
            <option class="option--element" value="10">10%</option>
            <option class="option--element" value="20">20%</option>
            <option class="option--element" value="30">30%</option>
            <option class="option--element" value="40">40%</option>
            <option class="option--element" value="50">50%</option>
            <option class="option--element" value="60">60%</option>
            <option class="option--element" value="70">70%</option>
            <option class="option--element" value="80">80%</option>
            <option class="option--element" value="90">90%</option>
            <option class="option--element"  value="100">100%</option>
          </select>
          <button type="submit" class="delete">⚙</button>
        </article>
      </form>
        <% } %>
     <% }%>
        
      </article>
    </section>
</main>
</body>
</html>