  <body>
    <%-include('includes/body.ejs') %>
       <section class="show--content">
        <article class="part--box">
        <article class="new--notifications">
          <h2 class="box--title">Powiadomienia</h2>
          <ul class="notifications--list">
            <% for(let [name, value] of Object.entries(notifications)) {
              %>
            <li class="notifications--list--element"><%=name%>: <%=value%></li>
            <%} %>
          </ul>
        </article>
        <article class="new--notifications">
          <h2 class="box--title">Infomacje o uczniu</h2>
          <p class="user--data">Imię i nazwisko: <%= accInfo.student.nameSurname%></p>
