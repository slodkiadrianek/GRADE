<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="css/todolist.css">
    <script defer src="js/todolistUse.js"></script>
</head>
<body>
  <%-include('../includes/body.ejs') %>
        <section class="todo--Content">

          <form action="/admin/newTask" method="POST">
            <article class="input--content">
                
                <button type="submit" class="input--button">âž•</button>
              <input type="text" name="task" placeholder="Wpisz zadanie" class="input" required>
              <input type="date" name="date" class="input--date" required>
              <select class="input--select" name="priority" id="" required>
                <option value="wysoki">Wysoki</option>
                <option value="sredni">Åšredni</option>
                <option value="niski">Niski</option>
              </select>
                  </form>
                  </article>
            <article class="item--box">
              <article class="header--item--box">
                <p class="task--template">Zadanie</p>                 <p class="date--template">Data</p>
                <p class="priority--template">Priorytet</p>

              </article>
              <% if(List.length > 0) { %>
                <% for(let el of List){  %>
                  <form action="/admin/deletetask" method="post">
                <article class="item">
                  <button class="check--button checked--button"><input type="radio" class="check"></button>
                  <input name="taskElement" class="task" value="<%= el.task %>"  readonly></input>
                <input name="date--element"  value="<%= el.date %>" readonly class="date"></input>
                 <input  name="priority--element"  value="<%= el.priority %>" readonly class="priority"></input>
                <button type="submit" class="delete">ðŸ—‘</button>
              </article>
            </form>
              <% } %>
           <% }%>
            
            
          </article>
        </section>
        </main>
  
</body>
</html>